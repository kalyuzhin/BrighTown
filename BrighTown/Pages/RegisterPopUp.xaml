<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             CanBeDismissedByTappingOutsideOfPopup="True"
             x:Class="BrighTown.Pages.RegisterPopUp"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Frame
        BackgroundColor="#2c3e54">
        <VerticalStackLayout
            Padding="10">
            <Label Text="Регистрация" HorizontalTextAlignment="Center" FontSize="28" TextColor="#fff"/>
            <Entry IsPassword="False" Placeholder="Login" HorizontalOptions="Center" TextColor="#FFF"/>
            <Entry IsPassword="True" Placeholder="Password" HorizontalOptions="Center" TextColor="#fff"/>
            <Entry IsPassword="True" Placeholder="Confirm password" HorizontalOptions="Center" TextColor="#fff"/>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>