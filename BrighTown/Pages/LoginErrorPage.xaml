<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BrighTown.Pages.LoginErrorPage"
             xmlns:pages="clr-namespace:BrighTown.Pages" x:DataType="pages:LoginErrorPage"
             BackgroundColor="#2c3e54">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Ошибка ввода данных" FontSize="Large" HorizontalOptions="Center" />
            <Button
                Command="{Binding DisplayPopUpErrorComand}"
                BackgroundColor="#fe7d3b"
                HeightRequest="50"
                CornerRadius="6"
                TextColor="White"
                x:Name="DisplayErrorButton"
                Text="Ошибка ввода"
                FontFamily="RoundsBlack" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>