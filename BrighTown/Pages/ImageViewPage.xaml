<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="Black"
             xmlns:viewModels="clr-namespace:BrighTown.ViewModels"
             x:Class="BrighTown.Pages.ImageViewPage"
             Shell.TabBarIsVisible="False"
             Shell.NavBarIsVisible="False">

    <VerticalStackLayout>
        <Button x:Name="CloseButton" Clicked="CloseButtonClicked" Text="*" HorizontalOptions="End" VerticalOptions="Start" WidthRequest="50" HeightRequest="50" TextColor="White" BackgroundColor="Transparent"></Button>
        <viewModels:PinchToZoomContainer HorizontalOptions="Fill" VerticalOptions="Center">
            <Image x:Name="CurrentImage"></Image>
        </viewModels:PinchToZoomContainer>
        
    </VerticalStackLayout>
    
    
    
</ContentPage>